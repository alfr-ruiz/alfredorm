{
  "name": "alfredorm",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/styles/input.css -o ./src/styles/output.css",
    "build:prod": "npx tailwindcss -i ./src/styles/input.css -o ./src/styles/output.css --minify",
    "start": "npx tailwindcss -i ./src/styles/input.css -o ./src/styles/output.css --watch",
    "dev": "npm-run-all --parallel start browser-sync",
    "browser-sync": "browser-sync start --server 'src' --files 'src/**/*.html, src/**/*.css' --port 3000 --no-notify --no-open --serveStatic 'src' --index discography.html --middleware \"function(req, res, next) { if (!req.url.includes('.')) { req.url += '.html'; } return next(); }\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15"
  },
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "chokidar-cli": "^3.0.0",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5"
  }
}
